# MBTI Travel Assistant MCP Configuration
# Copy this file to .env and update with your actual values

# Application Configuration
ENVIRONMENT=development
AWS_REGION=us-east-1
LOG_LEVEL=INFO

# MCP Client Configuration
SEARCH_MCP_ENDPOINT=http://localhost:8001
REASONING_MCP_ENDPOINT=http://localhost:8002
MCP_CONNECTION_TIMEOUT=30
MCP_RETRY_ATTEMPTS=3

# Authentication Configuration
COGNITO_USER_POOL_ID=us-east-1_example123
COGNITO_REGION=us-east-1
JWT_ALGORITHM=RS256
JWT_AUDIENCE=your-client-id
TOKEN_CACHE_TTL=300

# Caching Configuration
CACHE_ENABLED=true
CACHE_TTL=1800
REDIS_URL=redis://localhost:6379

# AgentCore Runtime Configuration
RUNTIME_PORT=8080
AGENT_MODEL=anthropic.claude-3-5-sonnet-20241022-v2:0
AGENT_TEMPERATURE=0.1
AGENT_MAX_TOKENS=4096

# Observability Configuration
TRACING_ENABLED=true
METRICS_ENABLED=true
LOG_FORMAT=json