# Staging Environment Configuration
# MBTI Travel Assistant MCP - Staging Settings

# Application Environment
ENVIRONMENT=staging
AWS_REGION=us-east-1

# MCP Client Configuration
SEARCH_MCP_ENDPOINT=https://staging-search-mcp.agentcore.aws
REASONING_MCP_ENDPOINT=https://staging-reasoning-mcp.agentcore.aws
MCP_CONNECTION_TIMEOUT=30
MCP_RETRY_ATTEMPTS=3

# Authentication Configuration (Staging)
COGNITO_USER_POOL_ID=us-east-1_staging789
COGNITO_REGION=us-east-1
JWT_ALGORITHM=RS256
JWT_AUDIENCE=mbti-travel-assistant-staging
TOKEN_CACHE_TTL=600

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=900
# REDIS_URL=redis://staging-redis.cache.amazonaws.com:6379

# AgentCore Runtime Configuration
RUNTIME_PORT=8080
AGENT_MODEL=amazon.nova-pro-v1:0:300k
AGENT_TEMPERATURE=0.1
AGENT_MAX_TOKENS=4096

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
TRACING_ENABLED=true
METRICS_ENABLED=true

# Staging-specific settings
DEBUG=false
MOCK_MCP_SERVERS=false