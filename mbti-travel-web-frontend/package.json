{
  "name": "mbti-travel-web-frontend",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run validate && npm run build-only",
    "build:staging": "npm run validate && cross-env NODE_ENV=production vite build --mode staging",
    "build:production": "npm run validate && cross-env NODE_ENV=production vite build --mode production",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint . --fix",
    "lint:check": "eslint . --max-warnings 0",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "validate": "npm run lint:check && npm run format:check && npm run type-check && npm run test:run",
    "ci:build": "npm ci && npm run validate && npm run build:production",
    "ci:test": "npm ci && npm run test:coverage && npm run test:e2e",
    "analyze": "npm run build -- --analyze",
    "clean": "rimraf dist node_modules/.vite node_modules/.tmp",
    "validate:deployment": "node scripts/validate-deployment.js"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "pinia": "^3.0.3",
    "vue": "^3.5.22",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/user-event": "^14.6.1",
    "@testing-library/vue": "^8.1.0",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22.18.7",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^2.1.9",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.33.0",
    "eslint-plugin-vue": "~10.4.0",
    "jiti": "^2.5.1",
    "jsdom": "^25.0.1",
    "npm-run-all2": "^8.0.4",
    "playwright": "^1.55.1",
    "prettier": "3.6.2",
    "rimraf": "^6.0.1",
    "rollup-plugin-visualizer": "^5.14.0",
    "typescript": "~5.9.0",
    "vite": "^7.1.7",
    "vite-plugin-vue-devtools": "^8.0.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8",
    "vue-tsc": "^3.1.0"
  }
}
